<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/motion_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layoutDescription="@xml/intercorp_entry_form_activity_layout2_scene">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="false"
        android:elevation="-100dp"
        android:scaleType="fitXY"
        android:src="@drawable/login_2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/login_2" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_layout"
        android:layout_width="350dp"
        android:layout_height="300dp"
        android:alpha="0.8"
        android:background="@drawable/layout_bg"
        android:elevation="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.498">

        <TextView
            android:id="@+id/layout_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="sans-serif-medium"
            android:lineSpacingExtra="8sp"
            android:text="Nos gustaria conocerte"
            android:textAlignment="center"
            android:textColor="#292B80"
            android:textSize="30sp"
            android:textStyle="bold"
            android:typeface="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Â¡Cuentanos mas sobre ti!"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#292B80"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layout_title" />

        <TextView
            android:id="@+id/entry_form_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:text="Nombre:"
            android:textAlignment="viewStart"
            android:textColor="#292B80"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/layout_title"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <TextView
            android:id="@+id/entry_form_lastname_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Apellido:"
            android:textAlignment="viewStart"
            android:textColor="#292B80"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/entry_form_user_name"
            app:layout_constraintTop_toBottomOf="@+id/entry_form_user_name" />

        <TextView
            android:id="@+id/entry_form_age_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Edad:"
            android:textAlignment="viewStart"
            android:textColor="#292B80"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/entry_form_user_lastname"
            app:layout_constraintTop_toBottomOf="@+id/entry_form_user_lastname" />

        <EditText
            android:id="@+id/entry_form_user_name"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:ems="10"
            android:hint="Esteban"
            android:inputType="textPersonName"
            app:layout_constraintStart_toStartOf="@+id/entry_form_name_text_view"
            app:layout_constraintTop_toBottomOf="@+id/entry_form_name_text_view" />

        <EditText
            android:id="@+id/entry_form_user_lastname"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:ems="10"
            android:hint="Ferreyra"
            android:inputType="textPersonName"
            app:layout_constraintStart_toStartOf="@+id/entry_form_lastname_text_view"
            app:layout_constraintTop_toBottomOf="@+id/entry_form_lastname_text_view" />

        <EditText
            android:id="@+id/entry_form_age"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:ems="10"
            android:hint="24"
            android:inputType="number"
            app:layout_constraintStart_toStartOf="@+id/entry_form_age_text_view"
            app:layout_constraintTop_toBottomOf="@+id/entry_form_age_text_view" />

        <TextView
            android:id="@+id/entry_form_birthday_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:text="Fecha de Nacimiento:"
            android:textAlignment="viewStart"
            android:textColor="#292B80"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/entry_form_age_text_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/entry_form_age_text_view"
            app:layout_constraintTop_toTopOf="@+id/entry_form_age_text_view" />

        <EditText
            android:id="@+id/entry_form_date"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:ems="10"
            android:hint="19/01/97"
            android:inputType="date"
            app:layout_constraintStart_toStartOf="@+id/entry_form_birthday_text_view"
            app:layout_constraintTop_toBottomOf="@+id/entry_form_birthday_text_view" />

        <Button
            android:id="@+id/entry_form_finish_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:backgroundTint="#292B80"
            android:text="Finalizar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/entry_form_age"
            app:layout_constraintTop_toBottomOf="@+id/entry_form_date" />

        <Button
            android:id="@+id/entry_form_logout_button"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Log Out"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@+id/entry_form_finish_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/entry_form_finish_button"
            app:layout_constraintTop_toTopOf="@+id/entry_form_finish_button" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.motion.widget.MotionLayout>